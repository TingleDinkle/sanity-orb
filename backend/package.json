{
  "name": "sanity-orb-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend API for Internet Sanity Orb",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:init": "node migrations/init.js",
    "db:reset": "echo 'DROP TABLE IF EXISTS user_analytics, snapshots, sessions CASCADE;' | psql $DATABASE_URL && npm run db:init",
    "db:test": "node -e \"import('./config/database.js').then(m => m.testConnection().then(connected => process.exit(connected ? 0 : 1)))\"",
    "migrate": "node migrations/run.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-slow-down": "^2.0.3",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
